---
import MainLayout from '../layouts/MainLayout.astro';
import Dashboard from '../components/Dashboard';
---

<MainLayout title="Dashboard | API Aura">
  <section class="mt-20 mb-12">
    <h1 class="text-8xl font-bold tracking-tighter text-aura-dark">
      API <span class="text-aura-slate opacity-80">&nbspAura.</span>
    </h1>
    <p class="mt-6 text-xl text-aura-slate font-medium max-w-2xl leading-relaxed">
      Check your API health in real-time. Add your project URLs to monitor heartbeat status and ensure your services are live and reachable.
    </p>
  </section>

  <Dashboard client:load />
</MainLayout>