---
import MainLayout from '../layouts/MainLayout.astro';
import Dashboard from '../components/Dashboard';
---

<MainLayout title="Heartbeat | API Aura">
  <section class="mt-12 mb-10">
    <h2 class="text-6xl font-bold text-aura-dark tracking-tight leading-[1.1]">
      System <span class="text-aura-slate">Aura</span>.
    </h2>
    <p class="mt-6 text-xl text-aura-slate font-medium max-w-xl leading-relaxed">
      Monitor your infrastructure in real-time. Add your deployed projects below to track their heartbeat.
    </p>
  </section>

  <Dashboard client:load />
</MainLayout>